// test_control.kl - Test control flow for native compilation
// Tests: if/else, while loops, for loops, break, continue

fn main() -> i32 {
    // Sum of even numbers from 0 to 9 using for loop
    var sum: i32 = 0
    for i: i32 in 0..10 {
        if i % 2 == 0 {
            sum = sum + i
        }
    }
    // sum should be 0 + 2 + 4 + 6 + 8 = 20

    return sum
}
