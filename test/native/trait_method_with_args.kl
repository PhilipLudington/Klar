// Test calling trait methods with arguments through generic bounds

trait Scalable {
    fn scale(self: Self, factor: i32) -> i32
}

struct Size {
    value: i32,
}

impl Size: Scalable {
    fn scale(self: Size, factor: i32) -> i32 {
        self.value * factor
    }
}

// Generic function that calls trait method with arguments
fn scale_by[T: Scalable](item: T, factor: i32) -> i32 {
    item.scale(factor)
}

fn main() -> i32 {
    let s = Size { value: 7 }
    scale_by(s, 6)  // Should return 42
}
